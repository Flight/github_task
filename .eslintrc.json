{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "require": false
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "one-var": [
            "error",
            "never"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}